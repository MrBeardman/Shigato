<p id="notice"><%= notice %></p>

<h1>Settings Tags</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Color</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @settings_tags.each do |settings_tag| %>
      <tr>
        <td><%= settings_tag.title %></td>
        <td><%= settings_tag.color %></td>
        <td><%= link_to 'Show', settings_tag %></td>
        <td><%= link_to 'Edit', edit_settings_tag_path(settings_tag) %></td>
        <td><%= link_to 'Destroy', settings_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

